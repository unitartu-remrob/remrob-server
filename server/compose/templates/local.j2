version: '3.8'

services:
  vnc:
    image: robotont:base
    container_name: {{ name }}
    hostname: robosim
    environment:
      - ROS_MASTER=localhost
      - PASSWORD=remrob # placeholder
      - VGL_DISPLAY=:1
    tmpfs:
      - /run
      - /run/lock
      - /tmp
    cap_add:
      - SYS_ADMIN
    volumes: 
      - /sys/fs/cgroup:/sys/fs/cgroup:ro
      - /tmp/.X11-unix/X1:/tmp/.X11-unix/X1:ro
    ports:
      - {{ port }}:5902
    deploy:
      resources:
        limits:
          cpus: 3.0
        reservations:
          devices:
            - driver: nvidia
              capabilities: [gpu, utility, graphics]
    networks:
      - simtainers
networks:
  simtainers:
    external: true
    name: sim_net
